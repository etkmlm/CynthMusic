        <Label FontWeight="SemiBold" x:Name="lblTitle" Width="200" Height="40" Content="Başlık" Foreground="Aquamarine" Margin="10,15,0,0" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Text="gerjknger" TextAlignment="Left" TextWrapping="Wrap" x:Name="txtMessage" Foreground="White" FontSize="15" Width="Auto" Margin="15,60,15,10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
